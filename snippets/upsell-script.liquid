    }

    

 

    $("body").on('click', '.increment-quantity', function(){
      var currentQty = $('#upsellQuantity').val();
      var qtyDirection = $(this).data("direction");
      var newQty = 0;

      if (qtyDirection == "1") {
        newQty = parseInt(currentQty) + 1;
      }
      else if (qtyDirection == "-1") {
        newQty = parseInt(currentQty) - 1;
      }

      // make decrement disabled at 1
      if (newQty == 1) {
        $(".decrement-quantity").attr("disabled", "disabled");
      }

      // remove disabled attribute on subtract
      if (newQty > 1) {
        $(".decrement-quantity").removeAttr("disabled");
      }

      if (newQty > 0) {
        newQty = newQty.toString();
        $('#upsellQuantity').val(newQty);
      }
      else {
        $('#upsellQuantity').val("1");
      }
    })
    $("body").on('click', '.upsellWrap.success .increment-quantity', function(e){
      e.preventDefault();      
      var productId = parseInt($(".upsellRemove").attr("data-variantid"));
      var productQ = parseInt($("#upsellQuantity").val());

      $("#upsellQuantity").addClass('loading');

      jQuery.post('/cart/update.js', {updates: {[productId]: productQ}})
      .done(function(cart) {
        console.log("success");
        $("#upsellQuantity").removeClass('loading');
        console.log(cart);
        updateCartTotal(cart);
      })
      .fail(function() {
        console.log("error");
      })
      .always(function() {
        console.log("complete");
      });
    });
    $("body").on('click', '.decrement-quantity', function(){
      var currentQty = $('#upsellQuantity').val();
      var qtyDirection = $(this).data("direction");
      var newQty = 0;

      if (qtyDirection == "1") {
        newQty = parseInt(currentQty) + 1;
      }
      else if (qtyDirection == "-1") {
