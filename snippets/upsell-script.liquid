    var updateCartTotal = function (cart){
      $('.cart--upsell').removeClass('hide');
      var total_now = cart.total_price/100;
      var total_price = 'Â£'+total_now+' GBP';
      $('.cart--total--price').text(total_price);
      $('span.cart--external--total-items').html(cart.item_count);
    }
    var changeStyle = function(variantName,variantID){
      $(".upsellWrap button#add-to-cart-button").html("&#10003; Added");
      $(".upsellWrap").addClass("success");
