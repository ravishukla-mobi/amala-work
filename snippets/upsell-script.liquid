    $("body").on('click', '.upsellWrap.success .decrement-quantity', function(e){
      e.preventDefault();      
      var productId = parseInt($(".upsellRemove").attr("data-variantid"));
      var productQ = parseInt($("#upsellQuantity").val());

      $("#upsellQuantity").addClass('loading');

      jQuery.post('/cart/update.js', {updates: {[productId]: productQ}})
      .done(function(cart) {
        console.log("success");
        $("#upsellQuantity").removeClass('loading');
        updateCartTotal(cart);
      })
      .fail(function() {
        console.log("error");
      })
      .always(function() {
        console.log("complete");
      });
    });

    $("body").on('click', '.upsellRemove', function(e){
      e.preventDefault();      
      var productId = parseInt($(".upsellRemove").attr("data-variantid"));

      jQuery.post('/cart/update.js', {updates: {[productId]: 0}})
      .done(function(cart) {
        ga('send', 'event', 'ecommerce', 'upsell', 'remove');
        $(".upsellWrap").removeClass("success");
        $(".upsellBelow div button#add-to-cart-button").html("Add to Cart");
        updateCartTotal(cart);
        $("#upsellQuantity").val("1");
        setTimeout(function(){ $(".upsellBelow div button#add-to-cart-button").show(); }, 1000);
      })
      .fail(function() {
        console.log("error");
      })
      .always(function() {
        console.log("complete");
      });
    });


