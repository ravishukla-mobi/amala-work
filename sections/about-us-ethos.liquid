<div class="about_ethos_container">
    <div class="ethos_heading landing_section_header">
        <div class="landing_subheading">{{ section.settings.ethos_primary_title }}</div>
        <div class="landing_heading">{{ section.settings.ethos_secondary_title }}</div>
    </div>
    <div class="card_maincontainer">
        {% for block in section.blocks %}
            <div class="ethos_card_container ethos_colo_mob_{{block.id}} ethos_colo_{{block.id}}">
                <img src="{{ section.settings.card_design_img | img_url: 'master' }}" alt="" class="card_designleaves">
                <div class="ethos_content">
                    <div class="ethos_img_container">
                        <div class="ethos_title">
                            {{ block.settings.ethos_card_title }}
                        </div>
                        <div class="card_main_images">
                            <img src="{{ block.settings.card_main_img | img_url: 'master' }}" alt="card image" class="ethos_card_img {% if block.settings.card_mob_img %}ethos_desk_img{% endif %}" >
                            {% if block.settings.card_mob_img != blank %}
                                <img src="{{ block.settings.card_mob_img | img_url: 'master' }}" alt="ethos card image" class="ethos_card_img ethos_mob_img">
                            {% endif %}
                        </div>
                    </div>
                    <p class="ethos_container_body ethos_desk_content">{{ block.settings.ethos_card_content }}</p>
                    <p class="ethos_container_body ethos_mob_content">{{ block.settings.ethos_card_content_mob }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>


{% style %}
{% for block in section.blocks %}
    .ethos_colo_{{block.id}}.ethos_card_container{
        background-color: {{block.settings.tiles_color_desk}};
    }
{% endfor %}
@media screen and (max-width: 767px) {
    {% for block in section.blocks %}
        .ethos_colo_mob_{{block.id}}.ethos_card_container{
            background-color: {{block.settings.tiles_color_mob}};
        }
    {% endfor %}
}
{% endstyle %}

