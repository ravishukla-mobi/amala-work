{% schema %}
{
    "name": "About-us Ethos",
    "settings": [
        {
            "type": "text",
            "id": "ethos_primary_title",
            "label": "Ethos Primary Heading",
            "default": "Our"
        },
        {
            "type": "text",
            "id": "ethos_secondary_title",
            "label": "Ethos Secondary Heading",
            "default": "Ethos"
        },
        {
            "type": "image_picker",
            "id": "card_design_img",
            "label": "Card Design Image"
        }
    ],
    "blocks": [
        {
            "type": "card-content",
            "name": "Ethos Card content",
            "settings": [
                {
                    "type": "text",
                    "id": "ethos_card_title",
                    "label": "Ethos Card Heading",
                    "default": "Authentic"
                },
                {
                    "type": "text",
                    "id": "ethos_card_content",
                    "label": "Ethos Card Content",
                    "default": "Amala Earth bases itself on the promise to be true and to do our best to offer authenticity to the consumer. We aspire to build the trust of our fellow consumers as a reliable and authentic brand. Ethical practices strengthen the authenticity of our mission."
                },
                {
                    "type": "text",
                    "id": "ethos_card_content_mob",
                    "label": "Ethos Mobile Card Content",
                    "default": "Amala Earth bases itself on the promise to be true and to do our best to offer authenticity to the consumer. We aspire to build the trust of our fellow consumers as a reliable and authentic brand. Ethical practices strengthen the authenticity of our mission."
                },
                {
                    "type": "image_picker",
                    "id": "card_main_img",
                    "label": "Card Desktop Image"
                },
                {
                    "type": "image_picker",
                    "id": "card_mob_img",
                    "label": "Card Mobile Image"
                },
                {
                    "type": "color_background",
                    "id": "tiles_color_mob",
                    "label": "Background color Mobile"
                },
                {
                    "type": "color_background",
                    "id": "tiles_color_desk",
                    "label": "Background color Desktop"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Our Ethos"
        }
    ] 
}
{% endschema %}