{% if product.metafields.custom.how_to_use_steps != blank or product.metafields.custom.pdp_how_to_use_video != blank %}
<section class="section-how-to-use">
  <div class="container">
    <div class="heading-bx">
      {% assign how_to_use_heading = section.settings.how_heading %}

      {% if product.metafields.custom.how_to_use_heading != blank %}
        {% assign how_to_use_heading = product.metafields.custom.how_to_use_heading %}
      {% endif %}
      <h3 class="section__title">{{ how_to_use_heading }}</h3>
    </div>
    <div class="row-how-use">
      {% if product.metafields.custom.pdp_how_to_use_video != blank %}
      <div class="how-to-use-img-bx">
        <video width="100%" height="100%" controls>
          <source src="{{ product.metafields.custom.pdp_how_to_use_video }}" type="video/mp4">
        </video>
        
      </div>
      {% endif %}
      <div class="how-to-us-faq">
        {% assign faq_length = 0 %}
        {% for step in product.metafields.custom.how_to_use_steps.value %}
		<div class="how-to-us-tab collpse-accoridian faq_questions_container">
          <h3 class="hdng-t{% if forloop.index == 1 %} active{% endif %}">Step {{ forloop.index }}</h3>
          <div class="content-collepse" {% if forloop.index == 1 %}style="display:block;"{% endif %}>
            <p>{{ step }}</p>
          </div>
        </div>
        {% assign faq_length = forloop.index %}
        {% endfor %}
        <div class="faq_view_all_steps">
          <p class="view_all_btn">View all {{faq_length}} steps</p>
          <p class="hide_all_btn">Hide all steps</p>
        </div>
        
      </div> 
    </div>
  </div>
</section>
{% endif %}

{% schema %}
  {
    "name": "How to use",
    "settings": [
      {
        "type" : "text",
        "id" : "how_heading",
        "label" : "Section Heading",
        "default" : "How to use"
      }
    ]
  }
{% endschema %}

