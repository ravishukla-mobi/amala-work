.expert_container  .slick-arrow,.explore-collection-section .slick-arrow{opacity:1;color:transparent; position:absolute;top:50%; transform:translateY(-50%);z-index:99;transition:all 0.3s ease;}
.expert_container:hover  .slick-arrow,.explore-collection-section:hover  .slick-arrow{
    opacity:1;
}
.expert_container  .slick-arrow:before,.explore-collection-section .slick-arrow:before{
    content:'';
  position:absolute;
  width:32px;
  height:32px;
  background-color:#cab49e;
  border-radius: 6.88689px;
}
.expert_container  .slick-arrow:after,.explore-collection-section .slick-arrow:after{
    content:'';
  position:absolute;
  width:8px;
  height:8px;
  border-left:3px solid #fff;
  border-bottom:3px solid #fff;
  top:55%;
  transform:rotate(45deg) translateY(-50%);
}
.expert_container  .slick-arrow.slick-prev,.explore-collection-section  .slick-arrow.slick-prev{
left:0;
}
.expert_container  .slick-arrow.slick-prev:after,.explore-collection-section  .slick-arrow.slick-prev:after{
left:8px;
}
.expert_container  .slick-arrow.slick-next,.explore-collection-section  .slick-arrow.slick-next{
right:5px;
}
.expert_container  .slick-arrow.slick-next:after,.explore-collection-section  .slick-arrow.slick-next:after{
right:15px;
top:12px;
transform:rotate(225deg) translateY(0%);
}
