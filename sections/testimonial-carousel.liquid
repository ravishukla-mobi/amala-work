<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

<section class="container testimonial_container">
  <header>
      <div class="expert_recommendation_text">
          {% if section.settings.sub_heading != blank or section.settings.heading != blank %}
            <div class="landing_section_header">
              {% if section.settings.sub_heading != blank %}
                  <h2 class="landing_heading">{{ section.settings.sub_heading }}</h2>
              {% endif %}
              {% if section.settings.heading != blank %}
                  <h3 class="landing_subheading">{{ section.settings.heading }}</h3>
              {% endif %}
            </div>
          {% endif %}
          <div class="expert_recommendation_btn">
              {% if section.settings.btn_text != blank %}
                  <a href="{{ section.settings.url_link }}">{{ section.settings.btn_text }}</a>
              {% endif %}
          </div>
      </div>
  </header>
  <div class="expert_container">
      {% for block in section.blocks %}
          <div>
              <div class="expert-contener1">
                  <div class="expert-contener">
                      {% if block.settings.fiveth_block_slider != blank %}
                          <div>
                              <img src="{{ block.settings.fiveth_block_slider | img_url:'master' }}"></div>
                          {% endif %}
                          <div class="expert-text">
                              {% if block.settings.expert_yours != blank %}
                                  <h3>{{ block.settings.expert_yours }}</h3>
                              {% endif %}
                              <div class="expert-desc">
                                  {% if block.settings.title != blank %}
                                      <h2>{{ block.settings.title }}</h2>
                                  {% endif %}
                                  {% if block.settings.expert_desc != blank %}
                                      <h3>{{ block.settings.expert_desc }}</h3>
                                  {% endif %}
                              </div>
                          </div>
                      </div>
                      {% if block.settings.anchor_text != blank %}
                          <div class="explore-button">
                              <a href="{{ block.settings.url_link }}">{{ block.settings.anchor_text }}</a>
                          </div>
                      {% endif %}
                  </div>
              </div>
          {% endfor %}
      </div>
  </section>
  <script>
    $(document).ready(function(){
        $('.expert_container').slick({
        slidesToShow: 3,
        slidesToScroll: 1,
        arrows:true,
        dots:false,
        nfinite:false,
        adaptiveHeight: true,
        responsive: [
      {
        breakpoint: 991,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 768,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1
        }
      },
      {
        breakpoint:592,
        settings: {
          slidesToShow: 1,
          infinite:false,
          slidesToScroll: 1
        }
      }
    ]
      });
    });
</script>

