{% if product.metafields.custom.pdp_faq_s != blank %}
<section class="your-qution-section">
  <div class="container">
  	<div class="heading-bx">
      <p>{{ section.settings.sec_head_faq }}</p>
     	<h3 class="section__title">{{ section.settings.sec_subhead_faq }}<span class="line-heading"></span></h3>
    </div> 
    
    <div class="your-question">
      {% for faq in product.metafields.custom.pdp_faq_s.value %}
      <div class="set-tab2 collpse-accoridian">
        <h3 class="hdng-t {% if forloop.index == 1 %}active{% endif %}">{{ faq.question }}</h3>
          <div class="content-collepse2" {% if forloop.index == 1 %}style="display:block;"{% endif %}>
            <p>{{ faq.ans }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

</section>
{% endif %}

{% schema %}
  {
    "name": "PDP FAQ'S",
    "settings": [
      {
        "type" : "text",
        "id" : "sec_head_faq",
        "label" : "Section Heading",
        "default" : "Amala earth helps."
      },
      {
        "type" : "text",
        "id" : "sec_subhead_faq",
        "label" : "Section Sub Heading",
        "default" : "Your Questions, Answered."
      }
    ]
  }
{% endschema %}

