<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
{%- comment -%} video slider starts here {%- endcomment -%}
<section class="festive-video-container">


    <div class="container video-section-container">
  
  
      <header class="section__header video-header video-section-header">
        {% if section.settings.video_title1 != blank or section.settings.video_title2 != blank %}
          <div class="landing_section_header">
            {% if section.settings.video_title1 != blank %}
              <h3 class="landing_subheading">{{section.settings.video_title1}}</h3>
            {% endif %}
            {% if section.settings.video_title2 != blank %}
              <h2 class="landing_heading">{{section.settings.video_title2}}</h2>
            {% endif %}
          </div>
        {%endif%}
        {% if section.settings.btn_text != blank %}
        <a href="{{section.settings.url_link}}" class="section__action-link link">{{section.settings.btn_text}} <svg focusable="false" class="icon icon--tail-right" viewBox="0 0 24 24" role="presentation">
      <path fill="currentColor" d="M22.707 11.293L15 3.586 13.586 5l6 6H2c-.553 0-1 .448-1 1s.447 1 1 1h17.586l-6 6L15 20.414l7.707-7.707c.391-.391.391-1.023 0-1.414z"></path>
    </svg></a>
    {%endif%}
      
  </header>
     
    <div class="video-slider">
      {% for block in section.blocks %}
        {% if block.type == 'video' %}
      <div class="video-slider-box video-slider-box-container">
        <a href="{{block.settings.video_url}}">
          <div class="video-slider-image-wrap">
          <img class="lazyload" data-src="{{block.settings.image | img_url: '300x'}}" alt="{{block.settings.image}}" height=300 width=300/>
            <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="play-circle" class="svg-inline--fa fa-play-circle fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="#fff" d="M256 8C119 8 8 119 8 256s111 248 248 248 248-111 248-248S393 8 256 8zm115.7 272l-176 101c-15.8 8.8-35.7-2.5-35.7-21V152c0-18.4 19.8-29.8 35.7-21l176 107c16.4 9.2 16.4 32.9 0 42z"></path></svg>
            </div>
            {% if block.settings.title != blank %}
            <h4 class="vdheading">{{block.settings.title}}</h4>
            {%endif%}
          {% if block.settings.expert_speak != blank %}
          <span class="expert-speaks-label">{{ block.settings.expert_speak }}</span>
          {% endif %}
        </a>
      </div>
         {% endif %} 
        {% endfor %}
      
      
    </div>
      
    </div>
  
  
  </section>
  
  {%- comment -%} video slider ends here {%- endcomment -%}




  <script>
    $(document).ready(function(){
        $('.video-slider').slick({
            slidesToShow: 3,
            slidesToScroll: 1,
            autoplay: true,
            autoplaySpeed: 3000,
            arrows:true,
            dots:false,
            nfinite: true,
            adaptiveHeight: true,
            responsive: [
          {
            breakpoint: 991,
            settings: {
              slidesToShow: 3,
              slidesToScroll: 1
            }
          },
          {
            breakpoint: 768,
            settings: {
              slidesToShow: 2,
              slidesToScroll: 1
            }
          },
          {
            breakpoint:592,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1
            }
          }
        ]
          });
    });
</script>

<style>


  #shopify-section-{{ section.id }} .festive-video-container{
    background-image: url('{{ section.settings.video_background_image | img_url: 'master' }}');
    background-position:50% -15px;
    background-repeat: no-repeat;
  }


  button.slick-next.slick-arrow {
    z-index: 1;
}
button.slick-prev.slick-arrow {
  z-index: 1;
}
  .video-section-header{
    align-items:end;
  }
  .video-carousel-section .video-slider-image-wrap{
    position: relative;
  }
  .video-carousel-section .blog-post-text-continer .landing_section_header{
    margin-bottom: 0;
  }
  {%- comment -%} .festive-video-container{
    background: linear-gradient(180deg, rgba(245, 240, 233, 0.29) 1.04%, rgba(154, 111, 87, 0.29) 28.65%, rgba(154, 111, 87, 0.29) 64.06%, rgba(245, 240, 233, 0.29) 98.44%);
  } {%- endcomment -%}
    .video-carousel-section .video-section-container{
        margin-top:100px;
        // background: linear-gradient(180deg, rgba(245, 240, 233, 0) 1.04%, rgba(154, 111, 87, 0.29) 28.65%, rgba(154, 111, 87, 0.29) 64.06%, rgba(245, 240, 233, 0) 98.44%);
      }
      .video-header-alignment{
        margin:0px;
      }
      .video-header a{
        text-decoration:underline;
    }
      .video-carousel-section .video-header .landing_section_header{
        margin-bottom: 0;
      }
      .video-carousel-section .video-header{
        margin-bottom: 10px;
      }
      .expert-speaks-label {
           position: absolute;
        top: 0px;
        left: 0px;
        border-radius: 0 10px 10px 0;
        z-index: 2;
        padding: 2px 5px;
        font-size: 12px;
        font-weight: 600;
        color: #fff;
        background-color: #9c4a2f;
        display: inline-block; 
      }
      .video-slider-box-container{
        background: rgba(170, 147, 121, 0.3);
        border-radius: 0px 0px 16px 16px;
      }
      
      .video-carousel-section .vdheading {
        margin: 0;
        padding-top: 11px;
        padding-bottom: 18px;
        padding-left: 10px;
        padding-right: 10px;
        font-family: 'Poppins';
        font-style: normal;
        font-weight: 400;
        font-size: 18px;
        line-height: 1.4;
        text-align: center;
        color: #222222;
        text-shadow: 0px 3.39338px 16.9669px rgb(0 0 0 / 25%);
        min-height: 80px;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      
    /*   .video-slider{margin-bottom:50px;} */
       .video-slider  .slick-arrow,.explore-collection-section .slick-arrow{opacity:0;color:transparent; position:absolute;top:50%; transform:translateY(-50%);z-index:99;transition:all 0.3s ease;}
      .video-slider:hover  .slick-arrow,.explore-collection-section:hover  .slick-arrow{
          opacity:1;
      }
      .video-slider  .slick-arrow:before,.explore-collection-section .slick-arrow:before{
          content:'';
        position:absolute;
        width:40px;
        height:40px;
        background-color:#cab49e;
        border-radius:50%;
      }
      .video-slider  .slick-arrow:after,.explore-collection-section .slick-arrow:after{
          content:'';
        position:absolute;
        width:15px;
        height:15px;
        border-left:3px solid #fff;
        border-bottom:3px solid #fff;
        top:63%;
        transform:rotate(45deg) translateY(-50%);
      }
      .video-slider  .slick-arrow.slick-prev,.explore-collection-section  .slick-arrow.slick-prev{
          left:0;
      }
      .video-slider  .slick-arrow.slick-prev:after,.explore-collection-section  .slick-arrow.slick-prev:after{
          left:8px;
      }
      .video-slider  .slick-arrow.slick-next,.explore-collection-section  .slick-arrow.slick-next{
          right:5px;
      }
      .video-slider  .slick-arrow.slick-next:after,.explore-collection-section  .slick-arrow.slick-next:after{
          right:8px;
        top:14px;
        transform:rotate(225deg) translateY(0%);
      }
      .video-slider-box{
        margin:15px;
        overflow:hidden;
        border-radius:10px;
        position:relative;
      }
      .video-slider-box svg{
          position:absolute;
        top:50%;
        left:50%;
        transform:translateX(-50%) translateY(-50%);
        opacity: 0.5;
        width:50px;
      }
      .video-slider-box img{border-radius:10px;margin:auto;width:100%;}
      .slick-dots{list-style:none;text-align:center;}
      .slick-dots  button{display:none;}
      .slick-dots li{display:inline-block;margin:5px;width:8px;height:8px;border-radius:50%;border:1px solid #b89c7d;}
      .slick-dots li.slick-active{background-color:#b89c7d;}
      @media(max-width:768px){
      .video-slider  .slick-arrow{
          opacity:1;
      }
        .video-header{margin-top:35px;}
        .video-header-alignment {
          margin: 0px;
      }
      {%- comment -%} .video-slider .slick-arrow:before{
        width: 20px;
        height: 20px;
      }
      .video-slider .slick-arrow.slick-next:after{
        right: 19px;
        top: 6px;
      }
      .video-slider .slick-arrow:after{
        width: 7px;
        height: 7px;
        border-left: 3px solid black;
        border-bottom: 3px solid black;
      }
      .video-slider  .slick-arrow.slick-prev,.explore-collection-section  .slick-arrow.slick-prev{
          
      } {%- endcomment -%}
      }
      @media only screen and (max-width:592px) {
        #shopify-section-{{ section.id }} .festive-video-container{
          background-image: url('{{ section.settings.video_background_image | img_url: 'master' }}');
          background-position:100% -22px;
          background-repeat: no-repeat;
        }
        .video-slider  .slick-arrow:after,.explore-collection-section .slick-arrow:after{
          content:'';
        position:absolute;
        width:10px;
        height:10px;
        border-left:3px solid #fff;
        border-bottom:3px solid #fff;
        top:50%;
        transform:rotate(45deg) translateY(-50%);
      }
      .video-slider  .slick-arrow:before,.explore-collection-section .slick-arrow:before{
        content:'';
      position:absolute;
      width:30px;
      height:30px;
      background-color:#cab49e;
      border-radius:50%;
    }
    .video-slider  .slick-arrow.slick-next:after,.explore-collection-section  .slick-arrow.slick-next:after{
      right:15px;
    top:11px;
    transform:rotate(225deg) translateY(0%);
  }
  .video-carousel-section .video-section-container{
    margin-top: 41px;
  }
  .video-slider  .slick-arrow.slick-prev,.explore-collection-section  .slick-arrow.slick-prev{
    left:20px;
}
.video-slider  .slick-arrow.slick-next,.explore-collection-section  .slick-arrow.slick-next{
  right:20px;
}
 .video-carousel-section .vdheading {
    font-size: 15px;
    min-height: 71px;
 }  
      .video-carousel-section .video-header{
        margin-bottom: 0;
      }     
      }


</style>
  {% schema %}
  {
    "name": "Video Carousel",
    "class": "video-carousel-section",
    "settings": [
      {
        "type":"image_picker",
        "id":"video_background_image",
        "label":"Background Image Desktop"
      },
      {
        "type":"image_picker",
        "id":"background_image_mobile",
        "label":"Background Image Mobile"
      },
      {
        "type":"text",
        "id":"video_title1",
        "label":"Heading 1"
      },
      {
        "type":"text",
        "id":"video_title2",
        "label":"Heading 2"
      },
      {
        "type":"text",
        "id":"btn_text",
        "label":"Button Text"
      },
      {
        "type":"url",
        "id":"url_link",
        "label":"Link"
      }
    ],
    "name": "Video Carousel",
    "blocks":[
        {
      "type": "video",
      "name": "Add Video",
      "settings": [
         {
            "type": "video_url",
            "id": "video_url",
            "accept": ["vimeo", "youtube"],
            "label": "Video",
            "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "2:1 .jpg recommended. Used when video is not loaded (required for Vimeo)."
          },
		{
            "type": "text",
            "id": "title",
            "label": "Title",
  			"default": "Video Title"
          },
          {
            "type": "text",
            "id": "expert_speak",
            "label": "Expert Title"
          },
		{
          "type": "checkbox",
          "id": "expspeaks",
          "label": "Set label as expert speaks"
        }
      ]
    }
    ],
    "presets": [
{
"name": "Video Carousel",
"category": "Custom"
}
]
  }
{% endschema %}