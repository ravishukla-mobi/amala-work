    <div class="container">
      <div class="empty-state">
        <div class="empty-state__icon">
<!--           {%- render 'icon', icon: 'big-cart' -%} -->
          <img src="https://cdn.shopify.com/s/files/1/0523/3252/7770/files/emptycart_68ffcfa2-db79-4c26-b03a-800218596a44.png" alt="Empty cart">
