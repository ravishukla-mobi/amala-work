<section>
<div class="container">
  {% if section.settings.title != blank or section.settings.subtitle != blank %}
  <header class="landing_section_header">
    {% if section.settings.subtitle != blank %}
    <h3 class="landing_subheading">{{section.settings.subtitle}}</h3>
    {% endif %}
    {% if section.settings.title != blank %}
    <h2 class="landing_heading">{{section.settings.title}}</h2>
    {% endif %}
  </header>
  {% endif %}
<div class="second-block-container">
  {% for block in section.blocks %}
      <a href="{{ block.settings.second_block_url }}">
          <div class="circular_image">
              {% if block.settings.product_slider != blank %}
                  <img src="{{ block.settings.product_slider | img_url: 'master' }}">
                  {% endif %}
              </div>
              {% if block.settings.block_two_subtitle != blank %}
                  <h2>{{ block.settings.block_two_subtitle }}</h2>
              {% endif %}
              {% if block.settings.title != blank %}
                  <h3>{{ block.settings.title }}</h3>
              {% endif %}
          </a>
      {% endfor %}
      </div>
</div>
  </section>

<style>
    {%- comment -%} highlighted brands css starts here {%- endcomment -%}


    .circular-image-grid-section .second-block-container{
        {%- comment -%} display: grid;
        grid-template-columns: auto auto auto auto auto auto auto auto auto;
        grid-column-gap: 20px;
        margin-top: 50px;
        text-align: center; {%- endcomment -%}

    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
    }
    .circular-image-grid-section .second-block-container h2{
        font-family: 'Poppins';
        font-style: normal;
        font-weight: 400;
        font-size: 11.337px;
        line-height: 17px;
        letter-spacing: 0.11em;
        color: #222222;
        margin: 0;
        padding-top: 10px;
        text-align:center;
    }
    .circular-image-grid-section .second-block-container h3{
        font-family: 'Poppins';
        font-style: normal;
        font-weight: 400;
        font-size: 17px;
        line-height: 28px;
        color: #222222;
        text-align:center;
    }
    .circular-image-grid-section .circular_image{
      max-width:220px;
      margin: auto;
    }
    {%- comment -%} highlighted brands css ends here {%- endcomment -%}

    .circular-image-grid-section .second-block-container a:hover{
        transform: translate3D(0,-1px,0) scale(1.02); /* move up slightly and zoom in */
        transition: all .4s ease; /* zoom in */
    }
    .circular-image-grid-section .landing_section_header + .second-block-container{
      margin-top: 0;
    }
    @media only screen and (max-width:768px) {
      .circular-image-grid-section .second-block-container{
        grid-template-columns: auto auto auto auto auto auto;
    }

    }
    @media only screen and (max-width:592px) {
        .circular-image-grid-section .second-block-container{
          display: grid;
          grid-template-columns: repeat(3, minmax(0, 1fr));
            grid-column-gap: 15px;
            grid-row-gap: 15px;
            margin-top: 56px;
        }
    @media only screen and (max-width:400px) {
        
      .circular-image-grid-section .circular_image{
        max-width: 100px;
        margin: auto;
      }
    }
  </style>





  {% schema %}
  {
    "name": "Circular Image Grid",
    "class": "circular-image-grid-section",
    "settings": [
        {
          "type":"text",
          "id":"subtitle",
          "label":"Subheading"
        },
        {
          "type":"text",
          "id":"title",
          "label":"Heading"
        }
    ],
    "blocks":[
        {
        "type": "block-2",
        "name": "Circular Image Grid",
        "settings": [
          {
        "type":"image_picker",
        "id":"product_slider",
        "label":"Image"
          },
          {
        "type":"text",
        "id":"block_two_subtitle",
        "label":"Subtitle"
      },
      {
        "type":"text",
        "id":"title",
        "label":"Title"
      },
      {
        "type":"url",
        "id":"second_block_url",
        "label":"Link"
      }
        ]
      }
    ],
    "presets": [
{
"name": "Circular Image Grid",
"category": "Custom"
}
]
  }
{% endschema %}