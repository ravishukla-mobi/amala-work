<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script>
  $(document).ready(function(){
      $('.image-slider-{{section.id}}').slick({
      slidesToShow: 4.4,
      slidesToScroll: 4,
      arrows:true,
      dots:false,
      infinite:false,
      lazyLoad: 'ondemand',
      adaptiveHeight: true,
      responsive: [
    {
      breakpoint: 991,
      settings: {
        slidesToShow: 3.5,
        slidesToScroll:3
      }
    },
    {
      breakpoint:592,
      settings: {
        slidesToShow: 1.5,
        slidesToScroll: 1.5
      }
    }
  ]
    });
  });
</script>
<section class="container third-block-container">
  {% if section.settings.heading_one != blank or section.settings.heading_two != blank %}
  <header class="landing_section_header">
    {% if section.settings.heading_one != blank %}
        <h3 class="landing_subheading">{{ section.settings.heading_one }}</h3>
    {% endif %}
    {% if section.settings.heading_two != blank %}
        <h2 class="landing_heading">{{ section.settings.heading_two }}</h2>
    {% endif %}
  </header>
  {% endif %}
  <div class="image-slider image-slider-{{section.id}}">
      {% for block in section.blocks %}
          <div class="slider_list">
              <a href="{{ block.settings.url_link }}">
                  <div class="third-block-sec">
                      {% if block.settings.third_block_slider != blank %}
                          <img src="{{ block.settings.third_block_slider | img_url: 'master' }}">
                          {% endif %}
                          {% if block.settings.title != blank %}
                              <div class="square-carousel-text">
                                  <h2>{{ block.settings.title }}</h2>
                              </div>
                          {% endif %}
                      </div>
                  </a>
              </div>
          {% endfor %}
      </div>
  </section>

<style>
  .custom-square-carousel-section .image-slider:not(.slick-initialized) {
    display: inline-flex;
    flex-wrap: nowrap;
    gap: 10px;
}
  {%- comment -%} .slider_list{
    width:162px;
  } {%- endcomment -%}
  .custom-square-carousel-section .square-carousel-text{
    height: 20%;
  }
      .custom-square-carousel-section .third-block-container{
        margin-top:50px;
        {%- comment -%} display:flex; {%- endcomment -%}
      }
      .custom-square-carousel-section .third-block-sec{
          position: relative;
      }
      .custom-square-carousel-section .third-block-sec h2{
          position: absolute;
          bottom: 0;
          font-family: 'Poppins';
          font-style: normal;
          font-weight: 500;
          font-size: 12.7252px;
          line-height: 19px;
          text-align: center;
          color: #FFFFFF;
          text-shadow: 0px 3.39338px 16.9669px rgb(0 0 0 / 25%);
          width:100%;
      }
      .custom-square-carousel-section .square-carousel-text h2{
        background: linear-gradient(176.87deg, rgba(34, 34, 34, 0) 14.17%, rgba(34, 34, 34, 0.8) 45.8%, #222222 90.61%);
        opacity: 0.8;
        border-radius: 0px 0px 10px 10px;
        padding-top:30%;
        padding-bottom: 13px;
        font-size: 18px;
        font-weight: 500;
      }





      .custom-square-carousel-section .slick-disabled {
        display: none !important;
    }
    
    .custom-square-carousel-section .image-slider  .slick-arrow,.explore-collection-section .slick-arrow{opacity:0;color:transparent; position:absolute;top:50%; transform:translateY(-50%);z-index:99;transition:all 0.3s ease;}
      .custom-square-carousel-section .image-slider:hover  .slick-arrow,.explore-collection-section:hover  .slick-arrow{
          opacity:1;
      }
      .custom-square-carousel-section .image-slider  .slick-arrow:before,.explore-collection-section .slick-arrow:before{
          content:'';
        position:absolute;
        width:32px;
        height:32px;
        background-color:#cab49e;
        border-radius: 6.88689px;
      }
      .custom-square-carousel-section .image-slider  .slick-arrow:after,.explore-collection-section .slick-arrow:after{
          content:'';
        position:absolute;
        width:8px;
        height:8px;
        border-left:3px solid #8C593F;
        border-bottom:3px solid #8C593F;
        top:55%;
        transform:rotate(45deg) translateY(-50%);
      }
    .custom-square-carousel-section .image-slider  .slick-arrow.slick-prev,.explore-collection-section  .slick-arrow.slick-prev{
      left:0;
    }
    .custom-square-carousel-section .image-slider  .slick-arrow.slick-prev:after,.explore-collection-section  .slick-arrow.slick-prev:after{
      left:8px;
    }
    .custom-square-carousel-section .image-slider  .slick-arrow.slick-next,.explore-collection-section  .slick-arrow.slick-next{
      right:5px;
    }
    .custom-square-carousel-section .image-slider  .slick-arrow.slick-next:after,.explore-collection-section  .slick-arrow.slick-next:after{
      right:14px;
      top:12px;
      transform:rotate(225deg) translateY(0%);
    }
    .custom-square-carousel-section .brands-slider-box{
      margin:15px;
      overflow:hidden;
      border-radius:10px;
      position:relative;
    }
    .slick-dots{list-style:none;text-align:center;}
    .slick-dots  button{display:none;}
    .slick-dots li{display:inline-block;margin:5px;width:8px;height:8px;border-radius:50%;border:1px solid #b89c7d;}
    .slick-dots li.slick-active{background-color:#b89c7d;}
    .custom-square-carousel-section .image-slider{
      overflow: hidden;
    }
    .custom-square-carousel-section .image-slider .slick-list{
      margin-left: -25px;
      margin-right: -25px;
    }
    .custom-square-carousel-section .slider_list{
      margin: 0 25px;
    }

    @media only screen and (max-width:960px) {
      .custom-square-carousel-section .image-slider .slick-list{
        margin-left: -10px;
        margin-right: -10px;
      }
      .custom-square-carousel-section .slider_list{
        margin: 0 10px;
      }
    }

    @media only screen and (max-width:768px) {
      .custom-square-carousel-section .slider_list{
        width:170px;
      }
      }
      @media only screen and (max-width:592px) {
        .custom-square-carousel-section .third-block-container{
          padding: 0;
          padding-left:20px;
          margin-top:34px;
        }
        .custom-square-carousel-section .third-block-sec h2{
          width:94%;
          font-size: 16px;
        }
        .custom-square-carousel-section .slider_list{
          width:132px;
        }        
      }


</style>
  {% schema %}
  {
    "name": "Custom Square Carousel",
    "class": "custom-square-carousel-section",
    "settings": [
        {
          "type":"text",
          "id":"heading_one",
          "label":"Sub-heading"
        },
        {
          "type":"text",
          "id":"heading_two",
          "label":"Heading"
        }
    ],
    "name": "Custom Square Carousel",
    "blocks":[
        {
        "type": "block-3",
        "name": "Custom Square Carousel",
        "settings": [
          {
        "type":"image_picker",
        "id":"third_block_slider",
        "label":"select your image"
          },
          {
        "type":"text",
        "id":"title",
        "label":"Title"
      },
      {
        "type":"url",
        "id":"url_link",
        "label":"Link"
      }
        ]
      }
    ],
    "presets": [
{
"name": "Custom Square Carousel",
"category": "Custom"
}
]
  
}
{% endschema %}