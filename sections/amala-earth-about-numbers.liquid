<div class="home_amala_numbers_section" style="background:{{section.settings.background}};">
    <div class="container">
        <div class="amala_numbers_top_block">
            <div class="amala-about__image_block">
            {%- if section.settings.image != blank -%}
              {%- capture supported_sizes -%}{%- render 'image-size', sizes: '100,200,300,400,500,550', image: section.settings.image -%}{%- endcapture -%}
              {%- assign image_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              <div class="amala-about--section amala-about__image--section" style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;">
                <img class="amala-about__image lazyload image--fade-in" alt="{{ section.settings.image.alt | escape }}" data-src="{{ image_url }}" data-widths="[{{ supported_sizes }}]" data-sizes="auto">
                <noscript>
                <img src="{{ section.settings.image | img_url: '500x' }}" alt="{{ section.settings.image.alt | escape }}">
                </noscript>
              </div>
            {%- endif -%}
            </div>
            <div class="amala-about-right_content">
              {%- if section.settings.content != blank -%}
                <div class="amala-about_content">
                  {{section.settings.content}}
                  {%- if section.settings.know_more != blank -%}
                  <a href="{%- if section.settings.know_more_link != blank -%}{{section.settings.know_more_link}}{%- else -%}javascript:void(0);{%- endif -%}" class="btn-link" target="_blank">Know more</a>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
            <div class="amala_numbers_bottom_block">
              <div class="amala_numbers-wrapper">
                {%- if section.settings.products_count != blank -%}<span class="numbers">{{section.settings.products_count}}</span>{%- endif -%}
                {%- if section.settings.subheading_1 != blank -%}<span class="amala_num_subheading">{{section.settings.subheading_1}}</span>{%- endif -%}
                {%- if section.settings.heading_1 != blank -%}<span class="amala_num_heading">{{section.settings.heading_1}}</span>{%- endif -%}
              </div>
              <div class="amala_numbers-wrapper">
                {%- if section.settings.brands_count != blank -%}<span class="numbers">{{section.settings.brands_count}}</span>{%- endif -%}
                {%- if section.settings.subheading_2 != blank -%}<span class="amala_num_subheading">{{section.settings.subheading_2}}</span>{%- endif -%}
                {%- if section.settings.heading_2 != blank -%}<span class="amala_num_heading">{{section.settings.heading_2}}</span>{%- endif -%}
              </div>
              <div class="amala_numbers-wrapper">
                {%- if section.settings.community_count != blank -%}<span class="numbers">{{section.settings.community_count}}</span>{%- endif -%}
                {%- if section.settings.subheading_3 != blank -%}<span class="amala_num_subheading">{{section.settings.subheading_3}}</span>{%- endif -%}
                {%- if section.settings.heading_3 != blank -%}<span class="amala_num_heading">{{section.settings.heading_3}}</span>{%- endif -%}
              </div>
            </div>
        </div>
    </div>
</div>

{% style %}
.home_amala_numbers_section {
    padding: 70px 0px;
}
.amala_numbers_top_block {
  display: flex;
  flex-wrap: wrap;
}
.amala-about__image_block{
    width: 100%;
    max-width: 33.33334%;
    display: flex;
    flex-wrap: wrap;
}
.amala-about__image--section {
  position: relative;
  margin-bottom:50px;
  margin-right: 20px;
  width:100%;
}
.amala-about__image--section img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}
.amala-about-right_content {
    width: 100%;
    max-width: 66.66667%;
    padding-left: 5%;
    color: #fff;
    font-size: 24px;
    display: flex;
    flex-wrap: wrap;
}
.amala-about-right_content p {
    margin-bottom: 0;
}
.amala-about-right_content .btn-link {
    text-decoration: underline;
}
.amala_numbers_bottom_block {
    display: flex;
    justify-content: space-around;
    width:100%;
    margin-top: auto;
}
.amala-about__image_block .amala_numbers-wrapper {
    width: 100%;
    margin-top: auto;
}
.amala_numbers-wrapper span {
    display: block;
    text-align: center;
    color: #fff;
}
.amala_numbers-wrapper .numbers {
    font-size: 60px;
    font-weight: 600;
    line-height: 1.2;
}
.amala_numbers-wrapper .amala_num_subheading {
    font-size: 20px;
    line-height: 1.3;
}
.amala_numbers-wrapper .amala_num_heading {
    font-size: 28px;
    line-height: 1.3;
}
.amala-about-right_content .amala-about_content {
    margin-bottom: 30px;
}
@media screen and (max-width:767px){
  .home_amala_numbers_section {
    padding: 40px 0px;
    margin-top: 15px;
    margin-bottom: 20px;
  }
  .amala_numbers_bottom_block {
    justify-content: space-between;
  }
  .amala-about-right_content{
    font-size: 13px;
  }
  .amala_numbers-wrapper .numbers{
    font-size: 34px;
  }
  .amala_numbers-wrapper .amala_num_subheading{
    font-size:16px;
  }
  .amala_numbers-wrapper .amala_num_heading{
    font-size:24px;
  }
  .amala-about__image--section{margin-right:0;}
}
@media screen and (max-width:640px){
  .amala-about-right_content{
    font-size: 10px;
  }
  .amala_numbers-wrapper .numbers{
    font-size:24px;
  }
  .amala_numbers-wrapper .amala_num_subheading{
    font-size:10px;
  }
  .amala_numbers-wrapper .amala_num_heading{
    font-size:14px;
  }
  .amala_numbers_bottom_block .amala_numbers-wrapper {
    padding: 0 5px;
  }
}
{% endstyle %}
