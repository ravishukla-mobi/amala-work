<section class="container consious_section_container">
    {% if section.settings.consious_heading1 != blank or section.settings.consious_sub_heading2 != blank %}
    <header class="landing_section_header">
      {% if section.settings.consious_heading1 != blank %}
          <h3 class="landing_subheading">{{ section.settings.consious_heading1 }}</h3>
      {% endif %}
      {% if section.settings.consious_sub_heading2 != blank %}
          <h2 class="landing_heading">{{ section.settings.consious_sub_heading2 }}</h2>
      {% endif %}
    </header>
    {% endif %}
    <div class="for-desktop">
        {% for block in section.blocks %}
            <div class="consious_container_desktop">
                <a href="{{ block.settings.url_link }}">
                {% if block.settings.consious_banner_desktop != blank %}
                    <div>
                        <img src="{{ block.settings.consious_banner_desktop | img_url: 'master' }}">
                    </div>
                {% endif %}
                {% if block.settings.title != blank %}
                    <div class="consious_text">
                        <span>{{ block.settings.title }}</span>
                    </div>
                {% endif %}
                </a>
            </div>
        {% endfor %}
    </div>
    <div class="for-mobile">
        {% for block in section.blocks %}
            <div class="consious_container_mobile">
            <a href="{{ block.settings.url_link }}">
                {% if block.settings.consious_banner_mobile != blank %}
                    <div>
                        <img src="{{ block.settings.consious_banner_mobile | img_url: 'master' }}"></div>
                    {% endif %}
                    {% if block.settings.title != blank %}
                        <div class="consious_text">
                            <span>{{ block.settings.title }}</span>
                        </div>
                    {% endif %}
                    </a>
                </div>
        {% endfor %}
    </div>
    </section>

<style>

    .for-desktop{
        display: flex;
        flex-wrap: wrap;

    }

    .for-desktop .consious_container_desktop{
        max-width: 48%;
    }

    .for-desktop .consious_container_desktop:nth-child(odd){
        margin-right: 2%;
    }

    .consious_container_desktop{
        position: relative;
    }
    .consious_journey_text{
    margin-top: 70px;
    padding-bottom: 5px;
    }
    .consious_container_mobile{
        display: none;
    }
    .consious_container_desktop img{
        width: 100%;
        padding-bottom: 10px;
    }
    .consious_text{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50% ,-50%);
        background: rgba(219, 196, 172, 0.5);
        width: 100%;
        text-align: center;
        padding-top: 19px;
        padding-bottom: 24px;
            }
            .consious_text span{
                font-family: 'Poppins';
                font-style: normal;
                font-weight: 500;
                font-size: 24px;
                line-height: 36px;
                text-align: center;
                letter-spacing: 0.21em;
                color: #FFFFFF;
                text-shadow: 0px 4px 4px rgb(0 0 0 / 25%);
                    }

    @media only screen and (max-width:768px) {
        .consious_journey_text{
            padding-left: 19px;
            }
        .consious_section_container{
            padding: 0px;
        }
        .consious_container_desktop{
            display: none;
        }
        .consious_container_mobile{
            display: block;
            position: relative;
        }
                .consious_container_mobile img{
                    width: 100%;
                    padding-bottom: 10px;
                }
    }
</style>


{% schema %}
  {
    "name": "Consious Journey",
    "settings": [
      {
        "type":"text",
        "id":"consious_heading1",
        "label":"Title"
      },
      {
        "type":"text",
        "id":"consious_sub_heading2",
        "label":"Sub Title"
      }
    ],
    "name": "Consious Journey",
  "blocks": [
    {
      "type": "Consious",
      "name": "Consious Journey",
      "settings": [
        {
            "type":"image_picker",
            "id":"consious_banner_desktop",
            "label":"Desktop Image"
        },
        {
            "type":"image_picker",
            "id":"consious_banner_mobile",
            "label":"Mobile Image"
        },
        {
        "type":"text",
        "id":"title",
        "label":"Title"
      },
      {
        "type":"url",
        "id":"url_link",
        "label":"Link"
      }
      ]
    }
    ],
    "presets": [
{
"name": "Consious Journey",
"category": "Custom"
}
]
  }
{% endschema %}