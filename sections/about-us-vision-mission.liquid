<div class="vis_parent_container">
    {% for block in section.blocks %}
            <div class="vision_container {{block.id}}" style="background-color:{{block.settings.container-background-color}};">
        {% if block.settings.container-url %}
            <a href="{{block.settings.container-url}}">
        {% endif %}
                <img src="{{section.settings.container-leaves | img_url: 'master' }}" alt="" class="leaves_image desk_leav">
                {% if block.settings.container-mob-leaves %}
                <img src="{{block.settings.container-mob-leaves | img_url: 'master' }}" alt="" class="leaves_image mob_leav">
                {% endif %}
                <h1 class="vision_heading">{{block.settings.vision-heading}}</h1>
                <div class="vision_content">{{block.settings.vision-content}}</div>
        {% if block.settings.container-url %}
            </a>
        {% endif %}
            </div>
    {% endfor %}  
</div>

<style>
    .vis_parent_container{
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin: auto 4%;
        margin-top: 61px;
    }
    .vision_container{
        max-width: 848.5px;
        width: 48.04%;
        margin-bottom: 52px;
        border-radius: 32px;
        font-family: Poppins,sans-serif;
        color: white;
        height: 354px;
        position: relative;
        padding-top: 38px;
        display: inline-block;
    }
    .vision_heading{
        font-size: 48px;
        font-weight: 500;
        line-height: 72px;
        letter-spacing: 0.21em;
        text-align: center;
        text-shadow: 0px 8.04309px 8.04309px rgba(0, 0, 0, 0.25);
    }
    .vision_content{
        font-weight: 400;
        font-size: 36px;
        line-height: 54px;
        text-align: center;
        max-width: 726px;
        margin: auto;
        position: relative;
        z-index: 1;
    }
    .leaves_image{
        position: absolute;
        right: 0;
        bottom: 0;
        width: 100%;
        border-radius: 34px;
    }
    .mob_leav{
        display: none;
    }

    @media screen and (max-width: 1400px) {
        .vision_heading{
            font-size: 35px;
        }
        .vision_content {
            font-weight: 400;
            font-size: 26px;
            padding-left: 15px;
            padding-right: 15px;
            line-height: 45px;
        }
    }

    @media screen and (max-width: 992px) {
        .vision_content{
            font-size: 20px;
            line-height: 35px;
        }
    }

    @media screen and (max-width: 767px) {
        .vision_heading{
            text-shadow: 0px 1.95811px 19.5811px rgba(0, 0, 0, 0.25);
        }
        .mob_leav{
            display: block;
            border-radius: 10px;
        }
        .desk_leav{
            display: none;
        }
        .vision_heading {
            font-size: 18px;
            font-weight: 500;
            line-height: 26px;
            letter-spacing: 0em;
            text-align: center;
        }
        .vision_content {
            font-size: 14px;
            font-weight: 400;
            line-height: 21px;
            letter-spacing: 0.05em;
            text-align: center;
            max-width: 74.73%;
        }
        .vision_container{
            height: 236px;
            padding-top: 16px;
            border-radius: 10px;
            margin-bottom: 14px;
        }
        .vis_parent_container{
            margin-bottom: 33px;
            margin-top: 30px;
        }

    }
    @media screen and (max-width: 600px) {
        .vision_content{
            max-width: 95%;
            padding-left: 10px;
            padding-right: 10px;
        }
    }
</style>


{% schema %}
{
    "name": "Vision & Mission",
    "settings": [
        {
            "type": "image_picker",
            "id": "container-leaves",
            "label": "Container Desktop Leaves"
        }
    ],
    "blocks": [
        {
            "type": "parent-content",
            "name": "Vision Container",
            "settings": [
                {
                    "type": "color",
                    "id": "container-background-color",
                    "label": "Background Color"
                },
                {
                    "type": "url",
                    "id": "container-url",
                    "label": "Redirect URL"
                },
                {
                    "type": "text",
                    "id": "vision-heading",
                    "label": "Enter the Heading",
                    "default": "OUR VISION"
                },
                {
                    "type": "richtext",
                    "id": "vision-content",
                    "label": "Enter the content"
                },
                {
                    "type": "image_picker",
                    "id": "container-mob-leaves",
                    "label": "Container Mobile Leaves"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "Vision Section",
            "name": "Vision Section",
            "settings": {}
        }
    ]
}
{% endschema %}