<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<section class="container third-block-container">

    <h3>{{ section.settings.heading_one }}</h3>
    <h2>{{ section.settings.heading_two }}</h2>

      <div class="image-slider">
      {% for block in section.blocks %}
          {% if block.type == 'carousel-block' %}
            
              <div class="">  
              <a href="{{ block.settings.url_link }}">
          <div class="third-block-sec product-img-desktop">
              <img src="{{ block.settings.product_image_desktop | img_url: 'master' }}">
          </div>
              <div class="third-block-sec product-img-mobile">
               <img src="{{ block.settings.product_image_mobile | img_url: 'master' }}">
              </div>            
          
          </a>
      </div>
     
      {% endif %}
  {% endfor %}
  </div>
  </section>

<script>
    $(document).ready(function(){
        $('.image-slider').slick({
        slidesToShow: 6,
        slidesToScroll: 1,
        arrows:true,
        dots:false,
        nfinite:false,
        adaptiveHeight: true,
        responsive: [
      {
        breakpoint: 991,
        settings: {
          slidesToShow: 5,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 768,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 460,
        settings: {
          slidesToShow: 2.5,
          infinite:false,
          slidesToScroll: 1
        }
      }
    ]
      });
    });
</script>

<style>
  .square-carousel-text{
    height: 20%;
  }
    .third-block-container h2{
        font-family: 'Poppins';
        font-style: medium;
        font-weight: 400;
        font-size: 55px;
        line-height: 35px;
        letter-spacing: 0.11em;
        color: #946C56;
        margin: 0;
        padding-bottom:30px;
        padding-top:20px;

      }
      .third-block-container h3{
          font-family: 'Poppins';
          font-style: light;
          font-weight: 400;
          font-size: 41px;
          line-height: 36px;
          color: #946C56;
          margin: 0;
      }
      .third-block-container{
        margin-top:50px;
        {%- comment -%} display:flex; {%- endcomment -%}
      }
      .third-block-sec{
          max-width: 170px;
          position: relative;
      }
      .third-block-sec h2{
          position: absolute;
          bottom: 0;
          font-family: 'Poppins';
          font-style: normal;
          font-weight: 500;
          font-size: 12.7252px;
          line-height: 19px;
          text-align: center;
          color: #FFFFFF;
          text-shadow: 0px 3.39338px 16.9669px rgb(0 0 0 / 25%);
          width: 90%;
          margin-bottom: 5px;
      }

      .slick-disabled {
        display: none !important;
    }
    
    .image-slider  .slick-arrow,.explore-collection-section .slick-arrow{opacity:1;color:transparent; position:absolute;top:50%; transform:translateY(-50%);z-index:99;transition:all 0.3s ease;}
      .image-slider:hover  .slick-arrow,.explore-collection-section:hover  .slick-arrow{
          opacity:1;
      }
      .image-slider  .slick-arrow:before,.explore-collection-section .slick-arrow:before{
          content:'';
        position:absolute;
        width:32px;
        height:32px;
        background-color:#cab49e;
        border-radius: 6.88689px;
      }
      .image-slider  .slick-arrow:after,.explore-collection-section .slick-arrow:after{
          content:'';
        position:absolute;
        width:8px;
        height:8px;
        border-left:3px solid #8C593F;
        border-bottom:3px solid #8C593F;
        top:63%;
        transform:rotate(45deg) translateY(-50%);
      }
    .image-slider  .slick-arrow.slick-prev,.explore-collection-section  .slick-arrow.slick-prev{
      left:0;
    }
    .image-slider  .slick-arrow.slick-prev:after,.explore-collection-section  .slick-arrow.slick-prev:after{
      left:8px;
    }
    .image-slider  .slick-arrow.slick-next,.explore-collection-section  .slick-arrow.slick-next{
      right:5px;
    }
    .image-slider  .slick-arrow.slick-next:after,.explore-collection-section  .slick-arrow.slick-next:after{
      right:16px;
      top:12px;
      transform:rotate(225deg) translateY(0%);
    }    
    .slick-dots{list-style:none;text-align:center;}
    .slick-dots  button{display:none;}
    .slick-dots li{display:inline-block;margin:5px;width:8px;height:8px;border-radius:50%;border:1px solid #b89c7d;}
    .slick-dots li.slick-active{background-color:#b89c7d;}
    .product-img-mobile{
      display:none;
    }
    .product-img-desktop{
      display:block;
    }


    @media only screen and (max-width:768px) {
    .product-img-mobile{
      display:block;
    }
    .product-img-desktop{
      display:none;
    }
      }
      @media only screen and (max-width:592px) {
        .third-block-container{
          padding: 0;
          padding-left: 10px;
        }
        .third-block-sec img{
          padding-right: 10px;
        }
        
      }


</style>
  {% schema %}
  {
    "name": "Image-block-slider",
    "settings": [
        {
          "type":"text",
          "id":"heading_one",
          "label":"Heading 1"
        },
      {
          "type":"text",
          "id":"heading_two",
          "label":"Heading 2"
        }
    ],
    "name": "Slider Image",
    "blocks":[
        {
        "type": "carousel-block",
        "name": "Slider Block",
        "settings": [
          {
        "type":"image_picker",
        "id":"product_image_desktop",
        "label":"Desktop Image"
          },
          {
        "type":"image_picker",
        "id":"product_image_mobile",
        "label":"Mobile Image"
          },
          
      {
        "type":"url",
        "id":"url_link",
        "label":"Link"
      }
        ]
      }
    ],
    "presets": [
{
"name": "Slider Blocks",
"category": "Custom"
}
]
  
}
{% endschema %}